page {
  height: 100%;
  background-color: gainsboro;
}

.container {
  height: 100%;
}

.card {
  height: 100%;
  width: 100%;
  background-color: rgb(248, 248, 248);
  display: grid;
  grid-template-columns: 1fr 130px 1fr;
  grid-template-rows: 160px repeat(3, 1fr) 20px;
}

.card-image {
  grid-column: 2 / 3;
  grid-row: 1 / 2;
  order: 2;
  margin: 10px;
}

.movie-image {
  height: 100%;
  width: 100%;
  border: 1px solid rgb(207, 207, 207);
}

.card-background {
  background-color: white;
  border: 1px solid rgb(207, 207, 207);
  grid-column: 1 / -1;
  grid-row: 1 / -2;
  margin: 20px;
  margin-top: 40px;
  margin-bottom: 0;
  padding: 10px;
  border-radius: 8px;
}

.card-description {
  grid-column: 1 / -1;
  grid-row: 2 / -2;
  margin: 40px;
  margin-bottom: 0;
  padding: 20px;
  border: 1px solid rgb(207, 207, 207);
}