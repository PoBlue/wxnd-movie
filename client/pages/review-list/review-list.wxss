/* pages/review-list.wxss */
page {
  background-color: rgb(247, 249, 251);
}

.placeholder {
  height: 20px;
  border-bottom: 1px solid rgb(207, 207, 207);
  width: 100%;
}

.list-item {
  background-color: white;
  display: flex;
  width: 90%;
  padding: 20px 40px 20px 40px;
  border-bottom: 1px solid rgb(207, 207, 207);
  flex-direction: column;
}

.movie-image {
  border-radius: 25px;
  height: 50px;
  width: 50px;
  margin-right: 16px;
}

.person-info {
  display: flex;
  text-align: center;
  padding-bottom: 16px;
}

.name {
  display: block;
  height: 50px;
  line-height: 50px;
  text-align: center;
}

.back-btn {
  background-color: white;
  border-top: 1px solid rgb(207, 207, 207);
  width: 100%;
  color: rgb(124, 151, 172);
  padding: 20px;
  text-align: center;
  position: fixed;
  bottom: 0;
}

.review, 
.voice {
  margin-left: 20px;
}

.review {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.voice {
  border: 1px solid rgb(124, 151, 172);
  width: 120px;
  padding: 4px 20px 4px 20px;
  border-radius: 4px;
  background-color: rgb(221, 225, 232);
  color: black;
}

.fa {
  font-size: 1.5rem;
  margin-right: 4px;
  vertical-align: middle;
  line-height: normal;
  
}

.voice-length {
  vertical-align: middle;
  line-height: normal;
}