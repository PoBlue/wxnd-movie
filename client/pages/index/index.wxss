  page {
    height: 100%;
  }

  .list-item {
    display: flex;
    flex: 1;
    height: 320rpx;
    width: 100%;
    margin: 8rpx;
    flex-direction: row-reverse;
    justify-content: center;
  }

  .description {
    height: 100%;
    flex: 4;
    margin: 8rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
  }

  .title {
    font-size: 40rpx;
    font-weight: bold;
  }

  .category {
    font-size: 32rpx;
  }

  .poster {
    height: 100%;
    margin: 8rpx;
    flex: 2;
  }
