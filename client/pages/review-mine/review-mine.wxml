<!--pages/review-mine/review-mine.wxml-->
<view class="container">
  <view class='list-state'>
    <text decode="{{true}}" class="list-name">{{ listname }} &nbsp;</text>
    <text class="fa fa-angle-down"></text>
  </view>

  <block wx:for="{{ favourList }}" wx:key="{{ item.movie.id }}">
    <navigator class="list-item" url="">
      <view class="info">      
        <view class='title'>{{ item.movie.title }}</view>

        <text wx:if="{{item.review.dataType=='文字'}}" class='description'>{{ item.review.text }}</text>
        <voice-block  wx:if="{{ item.review.dataType=='语音' }}" voice="{{ item.review.voice }}">
          <text class='fa fa-play-circle'/>
        </voice-block>

        <person-info name="{{ item.review.name }}" 
                    imageUrl="{{ item.review.imageUrl }}">
        </person-info>
      </view>
      <image class='poster' mode='asceptFill' src="{{ item.movie.image }}"></image>  
    </navigator>
  </block>

  <view class='back-btn'>回到首页</view>
</view>
