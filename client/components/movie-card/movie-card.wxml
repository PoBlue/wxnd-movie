<!--movie-card.wxml-->
<!--index.wxml-->
<view class='card'>
<view class="card-background"></view>
<view class='card-image'>
    <image mode='aspectFill' class='movie-image' src="{{ movie.image }}"></image>
</view>
<view class='card-description'>
    <text class='title'>{{ movie.title }}</text>
    <text class='description'>{{ movie.description }}</text>
    <view class='buttons'>
    <view class='view-button'>
        <text class='fa fa-eye'/>  <text>查看影评</text>
    </view>
    <view class='add-button'>
        <text class='fa fa-comments'/>  <text>添加影评</text>
    </view>
    </view>
</view>
</view>  
